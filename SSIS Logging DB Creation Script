USE [master]
GO

CREATE DATABASE [SSISLogging]
 CONTAINMENT = NONE
 ON  PRIMARY
( NAME = N'PrimaryFileName', FILENAME = N'C:\SQL Server\SSISLogging\SSISLoggingData1.mdf' , SIZE = 8192KB , MAXSIZE = UNLIMITED, FILEGROWTH = 65536KB ),
( NAME = N'FileName2', FILENAME = N'C:\SQL Server\SSISLogging\SSISLoggingData2.ndf' , SIZE = 8192KB , MAXSIZE = UNLIMITED, FILEGROWTH = 65536KB ),
( NAME = N'FileName3', FILENAME = N'C:\SQL Server\SSISLogging\SSISLoggingData3.ndf' , SIZE = 8192KB , MAXSIZE = UNLIMITED, FILEGROWTH = 65536KB ),
( NAME = N'FileName4', FILENAME = N'C:\SQL Server\SSISLogging\SSISLoggingData4.ndf' , SIZE = 8192KB , MAXSIZE = UNLIMITED, FILEGROWTH = 65536KB )
 LOG ON
( NAME = N'PrimaryLogFileName', FILENAME = N'C:\SQL Server\SSISLogging\SSISLogging_log.ldf' , SIZE = 8192KB , MAXSIZE = 2048GB , FILEGROWTH = 65536KB )
GO

ALTER DATABASE [SSISLogging] SET COMPATIBILITY_LEVEL = 130
GO

IF (1 = FULLTEXTSERVICEPROPERTY('IsFullTextInstalled'))
begin
EXEC [SSISLogging].[dbo].[sp_fulltext_database] @action = 'enable'
end
GO

